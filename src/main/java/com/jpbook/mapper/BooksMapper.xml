<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.jpbook.dao.BooksDao">
    <select id="HqueryAll" resultType="Map">
        <!--select * from books-->
        select b.bookid,b.bookname,u.uname,bt.btname,bs.bookstatename,b.createtime,b.url,b.icon from books b
        inner join users u on b.uuid = u.uuid
        inner join booktype bt on b.btid = bt.btid
        inner join bookstate bs on b.bookstate = bs.bookstate
    </select>
    <insert id="Hadd" parameterType="com.jpbook.entity.Books">
        insert into books(bookid,bookname,uuid,btid,bookstate,createtime,url,icon) VALUES(#{bookid},#{bookname},#{uuid},#{btid},#{bookstate},now(),#{url},#{icon})
    </insert>
